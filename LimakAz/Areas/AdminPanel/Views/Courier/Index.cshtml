@model List<Courier>
@{ int order = 0; }

<div class="content-wrapper pb-0">
    <div class="py-2">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>Courier:</h1>
            <a asp-action="create" asp-controller="courier" asp-area="AdminPanel" class="btn btn-primary">Create</a>
        </div>
        <table id="example" class="table table-striped table-hover table-bordered " cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>No</th>
                    <th>FullName</th>
                    <th>WareHouseId</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Courier courier in Model)
                {
                    order++;

                    <tr>
                        <td>@order</td>
                        <td>@courier.FullName</td>
                        <td>@courier.WareHouseId</td>
                        <td>@courier.Money</td>
                        <td>
                            <a asp-action="edit" asp-route-id="@courier.Id" class="btn btn-success">Edit</a>
                            <a asp-action="deletefetch" asp-route-id="@courier.Id" class="btn btn-danger btn-sweet-delete">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

