@using Microsoft.AspNetCore.Identity
@inject UserManager<AppUser> usermanager

@{
    AppUser member = null;
    if (User.Identity.IsAuthenticated)
    {
        member = await usermanager.FindByNameAsync(User.Identity.Name);
    }
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">
    <link rel="shortcut icon" type="image/x-icon" href="https://limak.az/favicon.ico">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <title>Limak.az</title>
</head>

<body>
    <!-- Header Start -->
    <header class="fixed-top">
        <div class="user-panel-account">
            <div class="container-user-panel">
                <div class="dropdown b-dropdown lang btn-group">
                    <button type="button" class="btn dropdown-toggle btn-primary user-panel-btn">
                        <span style="font-weight: 600;" id="userPanelBtn">@member.FullName</span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-right" id="userPanelList">
                        <li class="lang-dropdown">
                            <a asp-action="index" asp-controller="userpanel" class="dropdown-item">
                                <span>
                                    İstifadəçi paneli
                                </span>
                            </a>
                        </li>
                        <li class="lang-dropdown">
                            <a asp-action="index" asp-controller="userpanel" class="dropdown-item"><span>Sifarişlər</span></a>
                        </li>
                        <li class="lang-dropdown">
                            <a asp-action="package" asp-controller="userpanel"
                               class="dropdown-item"><span>Bağlamalar</span></a>
                        </li>
                        <li class="lang-dropdown">
                            <a asp-action="address" asp-controller="userpanel" class="dropdown-item">
                                <span>
                                    Xaricdəki Ünvanlar
                                </span>
                            </a>
                        </li>
                        <li class="lang-dropdown">
                            <a asp-action="profile" asp-controller="account"
                               class="dropdown-item"><span>Tənzimləmələr</span></a>
                        </li>
                        <li class="lang-dropdown">
                            <a asp-action="logout" asp-controller="account" class="dropdown-item"><span>Hesabdan çıx</span></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <nav class="navbar" id="userPanel-nav">
            <div class="container-nav">
                <div class="navbar-wrapper row">
                    <div class="navbar-logo col-md-2">
                        <a asp-action="index" asp-controller="userpanel" class="logo">
                            <img src="~/assets/images/logo.svg" alt="logo">
                        </a>
                    </div>
                    <ul class="nav-list col-md-5" style="justify-content: flex-start;">
                        <li class="nav-list-item"><a asp-action="index" asp-controller="tariff">Tariflər</a></li>
                        <li class="nav-list-item"><a asp-action="index" asp-controller="shop">Mağazalar</a></li>
                        <li class="nav-list-item"><a asp-action="index" asp-controller="contact">Əlaqə</a></li>
                        <li class="nav-list-item"><a asp-action="index" asp-controller="about">Haqqımızda</a></li>
                        <li class="nav-list-item"><a asp-action="index" asp-controller="faq">FAQ</a></li>
                    </ul>
                    <div class="navbar-right-col col-md-5" style="padding-left: 0;">

                        <a href="#" class="navbar-contact-phone">
                            <img src="~/assets/images/hot-line-panel.svg" alt="line">
                        </a>
                        <a asp-action="orderitem" asp-controller="order" class="btn btn-header-danger">SİFARİŞ ET</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <!-- Header End -->
    <!-- Main Start -->
    <main id="main"
          style="background: url(../assets/images/limak_bg.jpg) no-repeat; background-size: 100%; background-position: top center;"
          class="bg-full">
        <div class="main-container" style="max-width: 114rem;">
            <section id="user-panel">
                <div class="block">
                    <div class="block-header">
                        <h2 class="block-title" style="font-size: 17px;text-transform: uppercase;">
                            İstifadəçi Paneli
                        </h2>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="index.html">Ana səhifə</a>
                            </li>
                            <li class="breadcrumb-item active">
                                <span>İstifadəçi Paneli</span>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <!-- Aside -->
                    <div class="col-md-4 col-lg-3 col-12">
                        <aside class="aside">
                            <div class="card">
                                <div class="card-body">
                                    <div class="list-group user-nav ">
                                        <div class="list-group-item mt-0">
                                            <i class="far fa-user"></i>
                                            <h3 class="user-nav-title upper">
                                                @member.FullName
                                            </h3>
                                        </div>
                                        <div class="list-group-item">
                                            <i class="far fa-user-circle"></i>
                                            <h3 class="user-nav-title">
                                                <span>İstifadəçi adı:</span>
                                                <strong>@member.UserName</strong>
                                            </h3>
                                        </div>
                                        <div class="list-group-item">
                                            <i class="fas fa-info-circle"></i>
                                            <div class="user-nav-group">
                                                <h4 class="user-nav-group-title">
                                                    Cari ay
                                                </h4>
                                                <div class="user-nav-group-label">
                                                    0.00
                                                    <span class="manat">$</span>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="list-group aside-nav-top">
                                        <div class="list-group-item aside-nav mt-0">
                                            <a asp-action="index" asp-controller="userpanel">
                                                <i class="fas fa-shopping-bag"></i>
                                                <h3 class="aside-nav-title">Sifarişlər</h3>
                                            </a>
                                        </div>
                                        <div class="list-group-item aside-nav">
                                            <a asp-action="package" asp-controller="userpanel">
                                                <i class="fas fa-box-open"></i>
                                                <h3 class="aside-nav-title">Bağlamalar</h3>
                                            </a>
                                        </div>
                                        <div class="list-group-item aside-nav">
                                            <a asp-action="address" asp-controller="userpanel">
                                                <i class="fas fa-thumbtack"></i>
                                                <h3 class="aside-nav-title">Xaricdəki ünvanlar</h3>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="list-group aside-account">
                                        <div class="list-group-item mt-0 aside-nav">
                                            <a asp-action="index" asp-controller="balance">
                                                <i class="fas fa-dollar-sign"></i>
                                                <h3 class="aside-account-title">
                                                    AZN Balans
                                                </h3>
                                            </a>
                                        </div>
                                        <div class="list-group-item aside-nav">
                                            <a asp-action="profile" asp-controller="account">
                                                <i class="fas fa-user-cog"></i>
                                                <h3 class="aside-account-title">
                                                    Tənzimləmələr
                                                </h3>
                                            </a>
                                        </div>
                                        <div class="list-group-item aside-nav">
                                            <a asp-action="logout" asp-controller="account">
                                                <i class="fas fa-power-off"></i>
                                                <h3 class="aside-account-title">
                                                    Hesabdan çıx
                                                </h3>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </aside>
                    </div>
                    <!-- Content -->
                    @RenderBody()
                </div>
            </section>
        </div>
    </main>
    <!-- Main End -->
    <!-- Footer Start -->
    <footer style="margin-top: 0;">
        <div class="container-footer">
            <div class="footer-main row">
                <div class="footer-left col-md-4">
                    <a asp-action="index" asp-controller="userpanel" class="footer-logo">
                        <img src="~/assets/images/logo-white.svg" alt="logo">
                    </a>
                    <div class="footer-app">
                        <a href="#">
                            <img src="~/assets/images/app-store.svg" alt="app-store">
                        </a>
                        <a href="#">
                            <img src="~/assets/images/google-play.svg" alt="google-play">
                        </a>
                    </div>
                </div>
                <div class="footer-navigation-menu col-md-4">
                    <ul class="footer-nav-list">
                        <li><a asp-action="index" asp-controller="tariff">Tariflər</a></li>
                        <li><a asp-action="index" asp-controller="shop">Mağazalar</a></li>
                    </ul>
                    <ul class="footer-nav-list">
                        <li><a asp-action="index" asp-controller="term">Qaydalar</a></li>
                        <li><a asp-action="index" asp-controller="about">Haqqımızda</a></li>
                        <li><a asp-action="index" asp-controller="faq">Suallar</a></li>
                    </ul>
                    <ul class="footer-nav-list">
                        <li><a asp-action="index" asp-controller="privacy">Gizlilik şərtləri</a></li>
                        <li><a asp-action="index" asp-controller="contact">Əlaqə</a></li>
                    </ul>
                </div>
                <div class="footer-contact col-md-4">
                    <a href="#" class="hot-line">
                        <img src="~/assets/images/hot-line.svg" alt="line">
                    </a>
                    <div class="footer-social">
                        <a href="#"><img src="~/assets/images/facebook.svg" alt="facebook"></a>
                        <a href="#"><img src="~/assets/images/instagram.svg" alt="instagram"></a>
                        <a href="#"><img src="~/assets/images/telegram.png" alt="telegram" class="resized-icon"></a>
                        <a href="#"><img src="~/assets/images/twitter.svg" alt="twitter"></a>
                        <a href="#"><img src="~/assets/images/youtube.svg" alt="youtube"></a>
                        <a href="#"><img src="~/assets/images/tik-tok.png" alt="tiktok" class="resized-icon"></a>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <div class="footer-copy">
                    © 2018 - 2022 Limak.az | Bütün hüquqlar qorunur
                </div>
                <div class="footer-payment">
                    <img src="~/assets/images/visa.svg" alt="visa">
                    <img src="~/assets/images/mastercard.svg" alt="mastercard">
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer End -->
    <script src="https://kit.fontawesome.com/3d33933aa8.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    <script src="~/assets/js/main.js"></script>
</body>

</html>
